@page
@model Wire.Pages.SignInPage.SignInModel

<section class="vh-100 overflow-auto SignIn-Container">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-50">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="~/HomeImage/SignIn/pexels-sachin-nihcas-6052845.jpg"
                     class="img-fluid rounded shadow" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form class="needs-validation" novalidate method="post">

                    <p class="text-center h1 p-4">
                        <i class="bi bi-person-check-fill"></i> Sign In
                    </p>

                    <!-- UserName input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="form1Example13" class="form-control form-control-lg" asp-for="UserName" required />
                        <label class="form-label" for="form1Example13"><i class="bi bi-envelope-fill p-2"></i>Your name</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <span asp-validation-for="UserName" class="text-danger h6 font-weight-bold"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input type="password" id="form1Example23" class="form-control form-control-lg" asp-for="Password" required />
                        <label class="form-label" for="form1Example23"><i class="bi bi-key-fill p-2"></i>Password</label>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <span asp-validation-for="Password" class="text-danger h6 font-weight-bold"></span>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="form1Example3" asp-for="RememberMe" checked/>
                            <label class="form-check-label" for="form1Example3"> Remember me </label>
                        </div>
                        <a asp-page="/SignUpPage/SignUp">Forgot password?</a>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-dark btn-lg btn-block">Sign in</button>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
                    </div>

                    <a class="btn btn-info btn-lg btn-block" href="#!"
                       role="button">
                        <i class="bi bi-google p-2"></i>Continue with Google
                    </a>

                    <a class="btn btn-info btn-lg btn-block" href="#!"
                       role="button">
                        <i class="bi bi-facebook p-2"></i>Continue with Facebook
                    </a>

                </form>
            </div>
        </div>
    </div>
</section>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>

    $("document").ready(() => {

        (() => {
            'use strict'

            // Fetch the form with {.needs-validation}-id to apply custom Bootstrap validation styles
            const form = document.querySelectorAll('.needs-validation')

            Array.from(form).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }

                    form.classList.add('was-validated')
                }, false)
            })
        })()
    });

</script>