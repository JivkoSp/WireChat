@page
@model Wire.Pages.EmailVerificationPage.EmailVerificationModel


<div class="container">
    <div class="row">
        <div style="height:90vh;" class="col">
            <p class="text-center mt-5"><i class="bi bi-envelope-check h1"></i></p>
            <p class="h4 text-center mt-3">Confirm Your Email Address</p>
            <p class="h6 text-center">Please click on the link below to confirm your email address.</p>
            <div class="text-center">
                <form method="post">
                    <input type="hidden" asp-for="Email"/>
                    <button type="submit" class="btn btn-primary mt-5">Confirm your email</button>
                </form>           
            </div>
        </div>
    </div>
</div>
