@model PasswordChangeDto

<div class="container">
    <div class="row">
        <div class="col">
            <p class="h4 text-center mt-5">Reset Your Password</p>
            <div class="text-center">
                <i class="bi bi-eraser-fill h1"></i>
            </div>       
            <form method="post">
                <input type="hidden" asp-for="UserId"/>
                <div class="mt-2">
                    <input id="currentPassword" asp-for="OldPassword"
                           type="password" placeholder="Current Password"
                           class="form-control col-xl-6 col-lg-6 m-auto mt-3" />
                </div>
                <div class="mt-2">
                    <input type="password" asp-for="NewPassword"
                           placeholder="New Password"
                           class="form-control col-xl-6 col-lg-6 m-auto mt-3" />
                </div>
                <div class="mt-2">
                    <input type="password" asp-for="NewPasswordConfirm"
                           placeholder="Confirm New Password"
                           class="form-control col-xl-6 col-lg-6 m-auto mt-3" />
                </div>
                <div class="text-center mt-5 mb-5">
                    <button type="submit" style="width:10em;" class="btn btn-dark">Change</button>
                </div>              
            </form>
        </div>
    </div>
</div>
